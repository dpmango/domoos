.ReactModal {
	&__Overlay {
		position: fixed;
		z-index: 10000;
		top: 0;
		right: 0;
		left: 0;
		bottom: 0;
		display: flex;
		align-items: center;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, .5);
		border: solid 1px #979797;
		justify-content: center;
	}

	&__Content {
		position: relative;
		display: flex;
		align-items: center;

		+above($mobile) {
			width: 100%;
			max-width: 100%;
			// height: 100%;
		}

		+above($notebooks) {
			margin: auto 5%;
			width: 90%;
			max-width: 1110px;
			// max-height: 680px;
		}

		+above($desktop) {
			max-width: 1410px;
			// max-height: 790px;
		}
	}

	&__Body--open {
		overflow: hidden;
		width: 100%;
		height: 100%;
	}
}
