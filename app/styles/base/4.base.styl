body, html {
	margin-right: auto;
	margin-left: auto;
	width: 100%;
	min-width: 320px;
	height: 100%;
	font-family: var(--text-font);
	font-size: 62.5%;
	font-weight: 400;
	line-height: 1.4;
	color: var(--text-color);
	background-color: var(--bg-color);
	-webkit-font-smoothing: antialiased;
}

section {
	font-size: 1.6rem;
}

a {
	transition: .2s;
}

h1, h2, h3, h4 {
	font-family: var(--title-font);
	font-weight: 400;
	color: var(--title-color);
}

h1 {
	font-family: 'Gotham Pro Medium';
	font-size: 5rem;
	font-weight: 600;
	line-height: 1.2;
	letter-spacing: 0;

	+below($tablet) {
		font-size: 4rem;
	}

	+below($phones) {
		font-size: 3rem;
	}
}

h2 {
	font-weight: 600;
	letter-spacing: -1px;
	font-size: 2.8rem;
	font-family: 'Gotham Pro Medium';
	font-weight: 700;

	+below($phones) {
		font-size: 2rem;
	}

}

h3 {
	font-size: 2.4rem;
	font-weight: 600;
}

p {
	font-family: var(--text-font);
	font-size: 1.7rem;
	line-height: 1.7;
}

ul, ol {
	font-family: var(--text-font);
}

button {
	background-color: transparent;
	border: none;
}

a {
	display: inline-block;
	text-decoration: none;
	color: var(--blue);

	&:hover {
		color: var(--blue--hover);
	}
}

input[type='submit'] {
	line-height: 5rem;
}

input[type='tel'] {
	padding: 0 15px;
	font-size: 1.4rem;
	line-height: 5rem;
	background-color: #f3f5f9;
	border: 1px solid #dae0ed;
	t();

	&:focus {
		background-color: #fff;
	}
}
