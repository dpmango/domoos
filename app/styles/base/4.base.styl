body, html {
	margin-right: auto;
	margin-left: auto;
	overflow-x: hidden;
	width: 100%;
	min-width: 320px;
	max-width: 100%;
	font-family: var(--text-font);
	font-size: 62.5%;
	font-weight: 400;
	line-height: 1.4;
	color: var(--text-color);
	background-color: var(--bg-color);
	-webkit-font-smoothing: antialiased;
}

body {
	overflow-x: hidden;
}

section {
	font-size: 1.6rem;
}

a {
	transition: .2s;
}

i {
	transition: .2s;
}

h1, h2, h3, h4 {
	font-family: var(--title-font);
	font-weight: 400;
	color: var(--title-color);
}

.bg-grey {
	padding-bottom: 90px;
	background-color: #F8F9FD;

	+below($phones) {
		padding-bottom: 0;
		background-color: #fff;
	}
}

h1 {
	font-family: 'Gotham Pro';
	font-size: 5rem;
	font-weight: 600;
	line-height: 1.2;
	letter-spacing: 0;

	+below($tablet) {
		font-size: 4rem;
	}

	+below($phones) {
		font-size: 3rem;
	}
}

h2 {
	font-family: 'Gotham Pro';
	font-size: 2.6rem;
	font-weight: 600;
	letter-spacing: -1px;

	+below($phones) {
		font-size: 2rem;
	}
}

h3 {
	font-size: 2.2rem;
	font-weight: 600;
}

p {
	font-family: var(--text-font);
	font-size: 1.5rem;
	line-height: 1.5;
}

ul, ol {
	font-family: var(--text-font);
}

button {
	background-color: transparent;
	border: none;
}

a {
	display: inline-block;
	text-decoration: none;
	color: var(--blue);

	&:hover {
		color: var(--blue--hover);
	}
}

input[type='submit'] {
	line-height: 5rem;
}

input[type='tel'] {
	padding: 0 15px;
	font-size: 1.4rem;
	line-height: 5rem;
	background-color: #f3f5f9;
	border: 1px solid #dae0ed;
	t();

	&:focus {
		background-color: #fff;
	}
}

input.has-error {
	border-color: tomato !important;
}

.select2.has-error {
	.select2-selection__rendered {
		border-color: tomato !important;
	}
}

.ui-input__validation {
	position: absolute;
	top: calc(100% + 5px);
	left: 0;
	font-size: 12px;
	text-align: left;
	color: tomato;
}
