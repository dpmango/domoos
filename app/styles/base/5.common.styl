.default-close {
	cross();
	position: absolute;
	z-index: 10000;
	top: 25px;
	width: 25px;
	height: 25px;

	+above($mobile) {
		right: 25px;
	}

	+above($notebooks) {
		right: 40px;
	}

	+above($desktop) {
		right: 25px;
	}
}

.Alert {
	width: 100%;
	margin: 0 auto;
	padding: 15px;

	&__wrapper {
		background: var(--bg-color);
		box-shadow: 3px 5px 10px 0 rgba(0, 0, 0, 0.25);
	}

	&__header {
		position: relative;
	}
	&__title {
		color: var(--title-color);
	}
	&__illustration {
		position: absolute;
		left: 0;
		top: 0;
		background-position: 0 0;
		background-size: contain;
		background-repeat: no-repeat;
	}
	&__body {
		font-size: 1.4rem;
		margin-top: 2rem;
	}
	&__actions {
		display: flex;
		flex-wrap: wrap;
		font-size: 1.2rem;

		* {
			cursor: pointer;
		}
	}
	&__footer {

	}

	+below($phones) {
		max-width: 420px;

		&__wrapper {
			padding: 20px 15px;
		}
		&__header,
		&__body,
		&__actions {
			padding-left: 38px;
		}
		&__illustration {
			width: 22px;
			height: 28px;
		}
		&__title {
			font-size: 1.6rem;
			line-height: 2.6rem;
		}
		&__actions {
			margin-right: -20px;
			* {
				display: inline-block;
				margin: 15px 20px 0 0;
			}
		}
	}
	+above($phones) {
		max-width: 480px;

		&__wrapper {
			padding: 30px;
		}
		&__header,
		&__body,
		&__actions {
			padding-left: 90px;
		}
		&__illustration {
			width: 62px;
			height: 72px;
		}
		&__title {
			font-size: 2.2rem;
			line-height: 3.2rem;
		}
		&__actions {
			margin-right: -30px;
			* {
				margin: 20px 30px 0 0;
			}
		}
	}
}

.Modal {
	width: 100%;
	margin: 0 auto;
	max-width: 540px;

	&.Modal--wide {
		max-width: 1110px;
	}
	&.Modal--responsive {
		max-width: initial;
	}

	&__wrapper {
		position: relative;
		background: var(--bg-color);
		box-shadow: 3px 5px 10px 0 rgba(0, 0, 0, 0.25);
	}

	&__close {
		position: absolute;
		right: 0;
		top: 0;
		z-index: 10;
		cursor: pointer;

		&--icon {
			cross();
			&:before,
			&:after {
				height: 2px;
			}
		}
		&:hover {
			.Modal__close--icon {
				opacity: 1;
			}
		}
	}
	&__header {

	}
	&__title {
		color: var(--title-color);
	}
	&__body {
		font-size: 1.4rem;
	}
	&__footer {
		margin-top: 20px;
		font-size: 1.2rem;

		&--agreement {

		}
	}
	&__form {
		display: flex;
		flex-direction: column;

		input[type="text"],
		textarea {
			display: block;
			width: 100%;
			padding: 15px;
			line-height: 20px;
			background-color: #f3f5f9;
			border: 1px solid #dae0ed;
			t();

			&:focus {
				background-color: #fff;
			}
		}
		&--textfield {}
		&--select {
			position: relative;
			align-self: stretch;
			&:after {
				pseudo();
				position: absolute;
				right: 15px;
				top: 50%;
				margin-top: -4px;
				width: 6px;
				height: 6px;
				border-right: 1px solid var(--text-color);
				border-bottom: 1px solid var(--text-color);
				transform: rotate(45deg);
				z-index: 10;
			}
			input[type="text"] {
				padding-right: 40px;
			}
		}
		&--submit {
			@extend .btn;
			@extend .btn__full;
			@extend .btn__full--yellow;
			margin: 0;
			line-height: 50px;
		}
	}

	+below($phones) {
		&__wrapper {
			padding: 50px 15px;
		}
		&__title {
			font-size: 2rem;
			line-height: 3rem;
		}
		&__close {
			padding: 20px 20px 20px 0;
			&--icon {
				width: 18px;
				height: 18px;
			}
		}
		&__form {

			&--textfield,
			&--select,
			&--textarea {
				margin-top: 20px;
			}
			&--submit {
				margin: 25px 0 0;
			}
		}
	}

	+above($phones) {
		padding: 15px;

		&__wrapper {
			padding: 70px 90px;
		}
		&__title {
			font-size: 2.2rem;
			line-height: 3.2rem;
			font-weight: 500;
		}
		&__close {
			padding: 26px 26px 26px 0;
			&--icon {
				width: 24px;
				height: 24px;
			}
		}
		&__form {
			&--textfield,
			&--select,
			&--textarea {
				margin-top: 25px;
			}
			&--submit {
				align-self: flex-start;
				width: auto;
				padding: 0 30px;
				margin: 30px 0 0;
			}
		}
	}
}
