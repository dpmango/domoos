.block {
	background-color: #ffffff;
	box-shadow: 0 0 25px 0 rgba(218, 224, 237, .74);
}

.dropdown {
	position: relative;
	display: inline-block;

	&__menu {
		position: absolute;
		top: 0;
		left: 0;
		margin-top: 0;
		visibility: hidden;
		opacity: 0;
		t();
	}

	&:hover {
		& > ul {
			margin-top: 0;
			visibility: visible;
			opacity: 1;
		}
	}
}

.accordion {
	position: relative;
	display: inline-block;
	width: 100%;

	input {
		display: none;
	}

	&__menu {
		overflow: hidden;
		max-height: 0;
		transition: max-height .35s;
	}

	&__label {
		cursor: pointer;
	}

	input:checked ~ .accordion__menu {
		max-height: 100vh;
	}
}

.btn {
