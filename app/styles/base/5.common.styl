.add-to-cart {
	position: absolute;
	z-index: 100;
	top: 15px;
	right: 15px;
	display: flex;
	width: 35px;
	height: 35px;
	cursor: pointer;
	background-color: rgba(0, 0, 0, .4);
	border-radius: 2px;

	&:before {
		pseudo();
		margin: auto;
		width: 18px;
		height: 16px;
		background-image: url('/images/heart@2x.png');
		background-repeat: no-repeat;
		background-size: cover;
	}

	&.added, &:hover {
		&:before {
			background-image: url('/images/heart-added@2x.png');
		}
	}
}

.premium-checked {
