.AboutModal {
	margin: auto;
	width: 100%;
	block();

	&__wrapper {
		position: relative;
		padding: 70px 95px;

		+below($phones) {
			padding: 30px 15px;
		}
	}

	.default-close {
		top: 35px;
		right: 25px;
	}

	&__title {
		margin-bottom: 25px;
		width: 100%;
		font-size: 2.6rem;
		font-weight: 400;
	}

	&__description {
		width: 100%;
		font-weight: 300;

		p {
			max-width: 770px;
			font-size: 14px;
			line-height: 2;

			+below($phones) {
				font-size: 1.4rem;
				line-height: 1.6;
			}
		}
	}

	&__tabs {
		margin-top: 50px;
		margin-right: -15px;
		margin-left: -15px;
		display: flex;
		flex-wrap: wrap;
	}

	&__tab {
		padding-right: 15px;
		padding-left: 15px;
		width: 100%;
		min-width: 1px;
		max-width: 50%;
		min-height: 0;
		flex: 0 0 50%;
	}

	.Tab {
		margin: 20px 0;

		&__title {
			font-size: 16px;
		}

		&__content {
			display: none;
		}

		&.is-active {
			.Tab {
				&__content {
					display: block;
				}
			}
		}
	}
}
