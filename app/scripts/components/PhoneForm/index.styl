.PhoneForm {
	display: flex;
	flex-wrap: wrap;
	width: 100%;

	&__content {
		display: flex;

		+below($tablet) {
			display: none;
		}
	}

	&__input {
		min-width: 270px;
	}

	&__label {
		margin-bottom: 10px;
		display: block;
		font-size: 1.4rem;
		font-weight: 500;
		color: var(--title-color);

		+below($phones) {
			display: none;
		}
	}

	&__form {
		display: none;
		width: 100%;

		.btn {
			width: 100%;
			line-height: 50px;
		}

		+below($tablet) {
			display: block;
		}
	}
}
