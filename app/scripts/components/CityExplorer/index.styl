.CityExplorer {
	position: relative;
	width: 100%;
	min-height: 100vh;

	.slick-arrow.slick-next {
		right: -17px;
	}

	.slick-arrow.slick-prev {
		left: -17px;
	}

	+below($notebooks) {
		.slick-arrow.slick-next {
			right: -28px;
		}

		.slick-arrow.slick-prev {
			left: -28px;
		}
	}

	+below($tablet) {
		.slick-arrow.slick-next {
			display: none !important;
		}

		.slick-arrow.slick-prev {
			display: none !important;
		}
	}

	&.loading {
		min-height: 1400px;

		&:before {
			pseudo();
			position: absolute;
			z-index: 7000;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-color: #fff;
			background-image: url('/images/preload_explore-city.png');
			background-repeat: no-repeat;
			background-position: top left;
			background-size: contain;
		}
	}

	.slick-slide {
		position: relative;
		left: 0;
		width: 100%;

		+below($phones) {
			left: 0;
			width: 100%;
		}
	}

	.Suggest {
		margin-bottom: 58px;
		width: 100%;
		max-width: 400px;

		+below($phones) {
			margin-bottom: 20px;
		}
	}

	&__info {
		padding-bottom: 30px;
		display: flex;
		flex-wrap: wrap;

		+below($phones) {
			padding-bottom: 0;
		}
	}

	&__title {
		h3();
		margin-bottom: 7px;
		display: block;
		font-weight: 400;

		+below($phones) {
			display: none;
		}
	}

	&__header {
		margin-bottom: 33px;
		display: flex;
		flex-wrap: nowrap;
		width: 100%;

		+below($phones) {
			margin-bottom: 25px;
		}

		+below($phones) {
			flex-wrap: wrap;
		}

		.title {
			h2();
			line-height: 1em;
		}

		.to-category-link {
			margin: auto 0 0 auto;
			font-size: 1.6rem;
			white-space: nowrap;

			&:after {
				arrow(2px, 1px, var(--arrow-color), 45deg);
				margin-left: 12px;
			}

			+below($tablet) {
				margin-top: 5px;
				margin-right: 0;
				margin-left: auto;
				font-size: 1.2rem;
			}

			+below($phones) {
				position: absolute;
				left: 0;
				bottom: 0;
				margin-top: 10px;
				margin-right: auto;
				margin-left: 0;
				width: 100%;
			}
		}
	}

	&__description {
		text();
		width: 48%;
		max-width: 560px;
		order: 1;

		p {
			margin-bottom: 30px;
			padding-right: 0;
			font-size: 1.5rem;
			line-height: 1.9;

			+below($phones) {
				margin-bottom: 20px;
				padding-right: 0;
				width: 100%;
				font-size: 1.4rem;
				line-height: 1.8;
			}
		}

		+below($phones) {
			width: 100%;
			max-width: 100%;
			order: 2;
		}
	}

	&__about {
		margin-left: auto;
		padding: 30px 50px 10px 44px;
		width: 49%;
		max-width: 435px;
		border: 1px solid var(--border-color);
		order: 2;

		+below($tablet) {
			padding: 30px 30px 0;
		}

		+below($phones) {
			margin-right: auto;
			margin-left: 0;
			padding: 0 1px;
			width: 100%;
			max-width: 404px;
			border: none;
			order: 1;
		}

		.city {
			&__header {
				margin-bottom: 15px;
				display: flex;
				align-items: center;
				height: 60px;
				font-size: 1.8rem;
				color: var(--title-color);

				+below($phones) {
					display: none;
				}
			}

			&__logo {
				margin-right: 20px;
				width: 50px;
				height: 50px;
			}

			&__properties {
				padding: 10px 0;
				font-size: 1.6rem;
				line-height: 1em;
				bulls();

				+below($phones) {
					font-size: 1.4rem;
				}

				.property {
					margin-bottom: 29px;
					display: block;

					+below($phones) {
						margin-bottom: 21px;
						display: flex;
					}
				}

				.title {
					margin-right: 8px;
					color: #000;
				}

				.value {
					margin-left: 0;
					// text-transform: lowercase;
					color: var(--text-color);

					+below($phones) {
						margin-left: auto;
						text-align: right;
					}
				}
			}
		}
	}

	&__learn-more {
		margin-right: 0;
		margin-left: auto;
		display: inline-block;
		font-size: 1.6rem;
		line-height: 1em;

		&:after {
			arrow(2px, 1px, var(--arrow-color), 45deg);
			position: relative;
			margin-left: 12px;
		}

		+below($phones) {
			margin-right: auto;
			font-size: 1.5rem;
		}
	}

	&__developer, &__agencies {
		margin-top: 30px;

		+below($phones) {
			position: relative;
			padding-bottom: 30px;
		}
	}

	&__developer {
		+above($phones) {
			.slick-list {
				overflow: visible;
				height: auto !important;
			}

			.slick-track {
				display: flex;
				flex-wrap: wrap;
				width: 101% !important;
				max-width: calc(100% + 2px);
				transform: none !important;
				justify-content: space-between;

				&:before, &:after {
					display: none;
				}
			}

			.slick-slide.slick-cloned, .slick-arrow {
				display: none !important;
			}

			.slick-slide {
				padding: 0 !important;
				width: calc(33.333333% - 20px) !important;
				max-width: 350px;
				// max-width: 314px;
			}

			.slick-slider {
				left: 0 !important;
				width: 100% !important;
			}
		}

		+below($phones) {
			.slick-list {
				left: -10px;
			}
		}

		.CityExplorer__header {
			margin-bottom: 18px;
		}
	}

	&__buildings {
		margin-top: 70px;

		// padding-bottom: 40px;
		+below($phones) {
			position: relative;
			margin-top: 30px;
			// padding-bottom: 30px;
		}
	}

	&__content {
		position: relative;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;

		+below($phones) {
			margin: 0 -10px;
			width: calc(100% + 10px);
		}

		.developer {
			margin-bottom: 35px;
			padding: 35px 20px 35px 45px;
			width: calc(33.3% - 20px);
			border: 1px solid var(--border-color);
			transition: .25s;

			&:hover {
				+above($phones) {
					border-color: transparent;
					box-shadow: 0 0 25px 0 rgba(0, 0, 0, .3);
				}
			}

			+below($notebooks) {
				padding: 25px;
			}

			+below($tablet) {
				padding: 20px;
				width: calc(33.3% - 15px);
			}

			+below($phones) {
				margin: 0 10px;
				margin-bottom: 0;
				padding: 20px 25px;
			}

			&__logo {
				z-index: 100;
				margin-bottom: 20px;
				width: 50%;
				height: 65px;
				background-repeat: no-repeat;
				background-position: left center;
				background-size: contain;

				+below($tablet) {
					margin-bottom: 15px;
					height: 80px;
				}

				.dummy {
					position: absolute;
					z-index: 1;
					top: 55px;
					width: 120px;
					height: 30px;
					background-color: rgba(0, 0, 0, .1);
				}
			}

			&__title {
				margin-bottom: 13px;

				a {
					font-size: 1.6rem;
					font-weight: 500;
				}
			}

			&__features {
				font-size: 1.4rem;
				font-weight: 300;

				.feature {
					margin-bottom: 8px;

					span {
						white-space: nowrap;
					}

					&:nth-child(3) {
						text-transform: capitalize;
					}
				}
			}
		}

		.building {
			position: relative;
			overflow: hidden;
			width: 100%;
			transition: .25s;

			&.premium {
				// .add-to-cart, .premium-checked {
				// opacity: 0;
				// transition: .25s;
				// }
				background-color: var(--yellow-light);

				.building__district span, .building__subway span {
					background-color: transparent;
				}

				.add-to-cart, .premium-checked {
					opacity: 1;
				}

				// &:hover {
				// background-color: var(--yellow-light);

				// .building__district span, .building__subway span {
				// background-color: transparent;
				// }

				// .add-to-cart, .premium-checked {
				// opacity: 1;
				// }
				// }
				.building {
					&__title, &__content {
						padding: 0 20px;
					}

					&__content {
						padding-bottom: 10px;
					}
				}
			}

			&__image {
				position: relative;
				margin-bottom: 5px;
				overflow: hidden;
				font-size: 0;
				cursor: pointer;

				&:hover {
					.building__view {
						opacity: 1;
					}

					.building__featured {
						transform: rotate(1deg) scale(1.1);
					}
				}
			}

			&__view {
				position: absolute;
				z-index: 2;
				left: 15px;
				bottom: 15px;
				padding: 10px 10px 8px;
				display: flex;
				align-items: center;
				font-size: 12px;
				line-height: 1;
				cursor: pointer;
				color: #fff;
				background: rgba(#444444, .5);
				opacity: 0;
				transition: .4s;

				&:before {
					position: static;
					margin-top: -6px;
					margin-right: 8px;
					display: block;
					width: 17px;
					height: 18px;
					content: '';
					background: url('/images/link-icon.svg') center center no-repeat;
					background-size: contain;
				}
			}

			&__featured {
				position: relative;
				// margin-bottom: 5px;
				width: 100%;
				max-width: 370px;
				cursor: pointer;
				background-repeat: no-repeat;
				background-position: center;
				background-size: 100% 100%;
				transition: .5s;

				+above($mobile) {
					min-height: 140px;
				}

				+above($notebooks) {
					min-height: 170px;
				}

				+above($desktop) {
					min-height: 210px;
				}

				+above($desktop-hq) {
					min-height: 250px;
				}
			}

			&__title {
				width: 100%;
				cursor: pointer;

				&--developer {
					margin-bottom: 9px;
					font-size: 1.2rem;
					font-weight: 400;
					color: var(--text-color);
				}

				&--building {
					font-size: 1.8rem;
					font-weight: 500;
					color: #343434;

					+below($phones) {
						font-size: 1.6rem;
					}
				}
			}

			&__features {
				margin: 15px 0 20px;

				.feature {
					margin-bottom: 8px;
					font-size: 1.2rem;
					text-transform: capitalize;
					color: var(--text-color);

					&:before {
						tick(var(--blue), 2px, 135deg);
						margin-right: 12px;
						margin-bottom: 3px;
					}
				}
			}

			&__district, &__subway {
				margin-bottom: 10px;
				display: flex;

				span {
					padding: 0 10px;
					display: inline-block;
					font-size: 1.2rem;
					line-height: 2.3rem;
					color: var(--title-color);
					background-color: #eceff6;
					border-radius: 50px;
					opacity: .62;
					transition: .25s;

					+below($phones) {
						padding: 0 0 0 4px;
					}
				}

				&:before {
					margin-top: 1px;
					margin-right: 8px;
					display: block;
					content: '';
					background-repeat: no-repeat;
					background-position: center center;
					background-size: contain;
				}
			}

			&__district {
				&:before {
					width: 20px;
					height: 20px;
					background-image: url('/images/bull.png');
				}
			}

			&__subway {
				&.empty {
					opacity: 0;
				}

				&:before {
					width: 20px;
					height: 18px;
					background-image: url('/images/subway.png');
				}
			}
		}

		.agency {
			border: 1px solid var(--border-color);

			+above($mobile) {
				padding: 20px 25px;
			}

			+above($notebooks) {
				padding: 20px 50px 26px;
			}

			&__logo {
				width: 50%;
				height: 100px;
				background-repeat: no-repeat;
				background-position: left center;
				background-size: contain;
			}

			&__title {
				width: 100%;
				min-height: 44px;
				font-weight: 500;
			}

			&__services, &__title, &__offers {
				margin-bottom: 10px;
			}
		}

		.slick-slider {
			+below($phones) {
				left: 0;
				overflow: visible;
				width: calc(77.7% + 11px);
			}
		}

		.slick-list {
			+below($phones) {
				overflow: visible;
			}
		}
	}
}
