.CountryMap {
	width: 100%;
	min-height: 100vh;

	.gm-fullscreen-control {
		display: none;
	}

	.filter {
		position: absolute;
		z-index: 1000;
		top: 30px;
		left: 30px;
		padding: 30px 0;
		width: 100%;
		max-width: 350px;
		block();

		&__title {
			h4();
			margin-bottom: 10px;
			padding: 0 30px;
		}

		&__content {
			margin-bottom: 20px;
			padding: 0 30px;
			display: flex;
			flex-wrap: wrap;
			font-size: 1.3rem;
			line-height: 1.7;
			color: #7b7b7c;
		}

		&__list {
			padding: 0 0 0 30px;
			display: flex;
			flex-wrap: wrap;
		}

		&__item {
			margin-right: 15px;
			margin-bottom: 15px;
			padding: 15px 15px 12px;
			font-size: 1.2rem;
			line-height: 1em;
			text-transform: capitalize;
			cursor: pointer;
			border: 1px solid var(--border-color);

			&.selected {
				color: #fff;
				background-color: var(--blue);
				border: 1px solid var(--blue);
			}
		}
	}

	.sidebar {
		position: absolute;
		z-index: 10001;
		top: 0;
		right: 0;
		padding: 15px 30px 30px;
		width: 100%;
		max-width: 360px;
		min-height: 100%;
		block();

		&__header {
			margin-bottom: 15px;
			display: flex;
		}

		&__close {
			cross();
			margin-left: auto;
			width: 25px;
			height: 25px;
		}

		.city {
			&__img {
				margin-bottom: 10px;
				width: 300px;
				height: 186px;
				background-repeat: no-repeat;
				background-position: center center;
				background-size: cover;
			}

			&__link {
				margin-bottom: 10px;
				font-size: 1.4rem;
				font-weight: 300;

				&:after {
					arrow(1.5px, 1px, var(--arrow-color), 45deg);
					top: -1px;
					margin-left: 6px;
				}
			}

			&__name {
				h5();
				font-weight: 500;
			}

			&__description {
				margin-bottom: 15px;
				font-size: 1.2rem;
			}

			&__ratings {
				margin-bottom: 10px;
				display: flex;
				flex-wrap: wrap;

				.rating {
					margin-bottom: 15px;
					width: 50%;

					&__title {
						margin-bottom: 0;
						font-size: 12px;
						font-weight: 300;
						color: var(--title-color);
					}
				}

				span {
					margin-right: 4px;
				}
			}

			&__options {
				bulls();
				margin-bottom: 20px;

				.option {
					margin-bottom: 10px;
					font-size: 1.4rem;

					&:before {
						margin-right: 12px;
						margin-left: 4px;
					}

					&__title {
						margin-right: 5px;
						color: var(--title-color);
					}

					&__value {
						color: var(--text-color);
					}
				}
			}

			&__neighbors {
				margin-bottom: 25px;
				padding-bottom: 25px;
				border-bottom: 1px solid var(--border-color);

				.title {
					margin-bottom: 5px;
					width: 100%;
					font-size: 1.2rem;
				}

				.content {
					width: 100%;
					font-size: 1.4rem;
					color: var(--title-color);
				}
			}
		}
	}

	.bull {
		position: absolute;
		z-index: 1001;
		top: -27px;
		left: -12px;
		margin-top: 1px;
		margin-right: 12px;
		display: block;
		width: 25px;
		height: 25px;
		cursor: pointer;
		background-image: url('/images/bull-blue@2x.png');
		background-repeat: no-repeat;
		background-position: center center;
		background-size: contain;
		opacity: 1;
		t();

		&:hover {
			opacity: 1;
			transform: scale(1.3);
		}
	}
}
