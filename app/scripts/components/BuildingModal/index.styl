.BuildingModal {
	display: flex;
	height: 100%;
	block();

	.wrap {
		+above($mobile) {
			display: block;
		}

		+above($notebooks) {
			padding: 0;
			display: flex;
		}
	}

	+above($notebooks) {
		padding: 63px 47px;
	}

	+above($desktop) {
		padding: 80px 110px;
	}

	&__content {
		display: flex;
		flex-wrap: wrap;
		align-content: flex-start;

		+above($mobile) {
			width: 100%;
		}

		+above($notebooks) {
			width: 64%;
		}

		+above($desktop) {
			width: 62%;
		}
	}

	&__side {
		position: relative;

		+above($mobile) {
			padding-right: 15px;
			padding-left: 15px;
			padding-bottom: 20px;
			width: 100%;
		}

		+above($notebooks) {
			padding-right: 0;
			padding-left: 45px;
			padding-bottom: 0;
			width: 38%;
		}
	}

	&__info {
		position: relative;
		display: flex;
		flex-wrap: wrap;
		width: 100%;

		+above($mobile) {
			padding: 22px 15px 15px 14px;
		}

		+above($notebooks) {
			margin-bottom: 30px;
			padding: 0;
			height: 77px;
		}

		.logo {
			position: absolute;
			top: 0;
			right: 0;
			bottom: 0;
			margin: auto;
			width: 140px;
			height: 41px;
			background-repeat: no-repeat;
			background-position: center right;
			background-size: contain;

			+above($mobile) {
				display: none;
			}

			+above($notebooks) {
				display: block;
			}
		}

		.name {
			h2();
			margin-bottom: 5px;
			width: 100%;
			font-weight: 400;

			+above($mobile) {
				font-weight: 600;
			}

			+above($notebooks) {
				font-weight: 400;
			}
		}

		.subway {
			position: relative;
			display: flex;
			font-size: 1.4rem;
			line-height: 1.6;
			color: var(--title-color);

			+above($mobile) {
				align-items: flex-start;
			}

			+above($notebooks) {
				align-items: center;
			}

			&:before {
				pseudo();
				margin-right: 8px;
				width: 18px;
				min-width: 18px;
				height: 18px;
				min-height: 18px;
				border: 1.5px solid var(--red);
				border-radius: 50%;
			}

			&:after {
				position: absolute;
				height: 0;
				font-size: 1rem;
				font-weight: 500;
				line-height: 0;
				content: 'M';
				color: var(--red);

				+above($mobile) {
					top: 11px;
					left: 6px;
				}

				+above($notebooks) {
					top: 13px;
					left: 7px;
				}
			}
		}
	}

	&__developer {
		margin-bottom: 30px;
		align-items: center;
		width: 100%;
		height: 77px;
		justify-content: space-between;

		+above($mobile) {
			display: none;
		}

		+above($notebooks) {
			display: flex;
		}

		.info {
			.title {
				margin-bottom: 10px;
				font-size: 1.4rem;
				line-height: 1em;

				+above($notebooks) {
					font-size: 1.2rem;
				}

				+above($desktop) {
					font-size: 1.4rem;
				}
			}

			.name {
				font-size: 1.4rem;
				font-weight: 700;
				line-height: 1em;
				color: var(--title-color);
			}
		}
	}

	&__phone {
		+above($mobile) {
			display: none;
		}

		+above($notebooks) {
			display: block;
		}

		a {
			font-size: 1.8rem;
			font-weight: 700;
			line-height: 1em;
			white-space: nowrap;
			color: var(--title-color);
			border: 1px solid var(--border-color);

			+above($notebooks) {
				padding: 19px 20px 15px;
				font-size: 1.4rem;
			}

			+above($desktop) {
				padding: 19px 25px 15px;
				font-size: 1.8rem;
			}
		}
	}

	.featured {
		overflow: hidden;
		max-width: 720px;
		justify-content: center;

		+above($notebooks) {
			display: flex;
			max-height: 434px;
		}

		+above($desktop) {
			max-height: 480px;
		}

		&__image {
			+above($mobile) {
				width: 100%;
				height: auto;
			}

			+above($notebooks) {
				width: auto;
				height: 100%;
			}
		}
	}

	.tabs {
		display: flex;
		flex-wrap: wrap;

		.labels {
			width: 100%;
			height: 33px;
			border-bottom: 1px solid var(--border-color);
			justify-content: flex-start;

			+above($mobile) {
				display: none;
			}

			+above($notebooks) {
				margin-bottom: 33px;
				display: flex;
			}

			+above($desktop) {
				margin-bottom: 45px;
			}

			&__item {
				position: relative;
				padding-right: 35px;
				padding-bottom: 10px;
				white-space: nowrap;
				cursor: pointer;

				+above($notebooks) {
					font-size: 1.4rem;
				}

				+above($desktop) {
					font-size: 1.6rem;
				}

				&:last-child {
					padding-right: 0;
				}

				&:before {
					pseudo();
					position: absolute;
					left: 0;
					bottom: 0;
					width: calc(100% - 40px);
					height: 2px;
					background-color: var(--blue);
					opacity: 0;
					t();
				}

				&.active {
					color: var(--blue);

					&:before {
						opacity: 1;
					}
				}
			}
		}

		.content {
			margin-bottom: auto;

			+above($mobile) {
				margin-top: 15px;
			}

			+above($desktop) {
				margin-top: 0;
			}

			&__title {
				h4();
				margin-bottom: 12px;
				font-weight: 500;

				+above($mobile) {
					display: none;
				}

				+above($desktop) {
					display: block;
				}
			}

			&__list {
				bulls();

				+above($mobile) {
					font-size: 1.4rem;
				}

				+above($desktop) {
					padding-left: 3px;
					font-size: 1.6rem;
				}

				li {
					+above($mobile) {
						padding: 7px 0;

						&:before {
							top: 0;
							margin-right: 15px;
						}
					}

					+above($notebooks) {
						padding: 10px 0;

						&:before {
							top: 3px;
							margin-right: 20px;
						}
					}
				}

				.title {
					color: var(--title-color);
				}
			}
		}
	}

	&__contact {
		+above($notebooks) {
			position: absolute;
			bottom: 13px;
		}

		+above($desktop) {
			position: absolute;
			bottom: 42px;
		}

		.PhoneForm {
			+above($notebooks) {
				padding-top: 15px;
				border-top: 1px solid var(--border-color);
			}

			&__input {
				min-width: auto;
				max-width: 171px;
			}

			&__submit {
				padding: 0 25px;
				line-height: 52px;
			}
		}
	}
}
