.Cart {
	position: relative;
	display: flex;
	height: 100%;

	&__content {
		display: flex;
		align-items: center;
	}

	&__icon {
		cursor: pointer;
	}

	&__counter {
		position: absolute;
		z-index: 100;
		top: 12px;
		left: 14px;
		display: flex;
		align-items: center;
		min-width: 14px;
		height: 14px;
		font-family: Tahoma;
		font-size: .8rem;
		line-height: 0;
		cursor: pointer;
		color: #fff;
		background-color: var(--red);
		border-radius: 50%;
		justify-content: center;
	}

	&__items {
		block();
		position: absolute;
		top: 50px;
		right: 0;
		padding: 16px 18px 15px;
		min-width: 175px;
		font-size: 1.2rem;
		color: var(--title-color);

		+above($mobile) {
			display: none;
		}

		+above($notebooks) {
			display: block;
		}

		&:before {
			position: absolute;
			top: -5px;
			right: 10px;
			corner(#fff, 5px);
		}
	}

	&__label {
		margin-left: 4px;
		line-height: 1em;
		white-space: nowrap;
		cursor: pointer;
		color: rgba(255, 255, 255, 1);

		font-size: 1.2rem;
		+below($phones) {
			font-size: 0;
		}

		&--phone {
			position: relative;
			bottom: -1px;
			font-weight: 700;
		}
	}
}

.AdvancedCart {
	position: relative;
	width: 100%;
	min-height: 300px;
	background-color: #fff;

	&__close {
		cross();
		position: absolute;
		top: 25px;
		right: 25px;
		width: 25px;
		height: 25px;
	}

	&__title {
		padding: 50px 15px 15px 10px;
		font-size: 2.2rem;
		line-height: 1em;
		color: var(--title-color);
	}

	&__call {
		position: absolute;
		left: 0;
		bottom: 0;
		padding: 40px 45px;
		display: flex;
		flex-wrap: wrap;
		align-items: flex-end;
		width: 100%;
		min-height: 160px;
		background-color: #fff;
		box-shadow: 0 -4px 15px 0 rgba(218, 224, 237, .25);

		.PhoneForm {
			&__submit {
				line-height: 50px;
			}
		}
	}

	&__content {
		padding: 0 75px 159px;
		display: flex;
		overflow: scroll;
		flex-wrap: wrap;
		width: 100%;
		max-height: 625px;
		font-size: 1.2rem;
		line-height: 1em;
	}

	&__item {
		position: relative;
		margin: 0 15px;
		padding: 17px 0;
		display: table;
		flex-wrap: wrap;
		align-items: center;
		width: 100%;
		color: var(--title-color);

		& > div {
			display: table-cell;
			height: 38px;
			vertical-align: middle;
		}

		&:before {
			pseudo();
			position: absolute;
			right: 0;
			bottom: 1px;
			width: 100%;
			height: 1px;
			background-color: var(--border-color);
		}

		.featured {
			position: relative;
			top: -1px;
			margin-right: 30px;
			width: 52px;
			min-width: 52px;
			height: 35px;
			background-repeat: no-repeat;
			background-size: cover;
		}

		.developer, .ready, .district, .city {
			+above($notebooks) {
				padding: 0 15px 0 0;
			}

			+above($desktop) {
				padding: 0 30px 0 0;
			}
		}

		.name {
			padding: 0 30px;
			width: 18%;
			min-width: 180px;
		}

		.developer {
			width: 14%;
			min-width: 130px;
		}

		.ready {
			width: 10%;
			min-width: 80px;
		}

		.district {
			width: 15%;
			min-width: 180px;
		}

		.city {
			padding: 0 30px 0 0;
			width: 13%;
			min-width: 80px;
		}

		.form {
			padding: 0 10px 0 0;
			width: 10%;

			.PhoneForm {
				&__input, &__submit {
					line-height: 3.2rem;
				}

				&__input {
					padding-top: 2px;
					min-width: 140px;
				}

				&__submit {
					position: relative;
					margin-left: 10px;
					padding: 3px 15px 0;
					text-transform: capitalize;

					&:after {
						arrow(1px, 1px, var(--arrow-color), 45deg);
						position: absolute;
						top: 0;
						right: 0;
						left: 0;
						bottom: 0;
						margin: auto;
					}

					+above($notebooks) {
						font-size: 0;

						&:after {
							display: block;
						}
					}

					+above($desktop) {
						font-size: 1.2rem;

						&:after {
							display: none;
						}
					}
				}
			}
		}

		.close {
			width: 5%;

			&-handler {
				cross();
				position: relative;
				top: 1px;
				margin-left: 12px;
				width: 12px;
				height: 12px;
			}
		}
	}

	&__show-full {
		padding: 30px 15px 15px;

		.btn {
			margin-left: 0;
			padding: 2px 17px 0;
			display: inline-block;
			font-size: 1.4rem;
			font-weight: 400;
			line-height: 36px;
			text-transform: none;
		}
	}

	&__info {
		.title {
			margin-bottom: 5px;
			font-size: 1.8rem;
			font-weight: 500;
			color: var(--title-color);
		}

		.text {
			text();
			margin-right: 100px;
			width: 100%;
			max-width: 375px;
			color: var(--title-color);
		}
	}
}

.SimpleCart {
	&__title {
		padding: 10px 15px 5px 14px;
		font-size: 1.2rem;
		font-weight: 500;
		line-height: 1em;
	}

	&__content {
		overflow: scroll;
		max-height: 400px;
	}

	&__item {
		position: relative;
		margin: 0 15px;
		padding: 12px 0;
		display: flex;
		align-items: center;
		min-width: 350px;

		&:before {
			pseudo();
			position: absolute;
			right: 0;
			bottom: 0;
			width: calc(100% - 60px);
			height: 1px;
			background-color: var(--border-color);
		}

		.featured {
			position: relative;
			top: -1px;
			margin-right: 12px;
			width: 47px;
			height: 31px;
			background-repeat: no-repeat;
			background-size: cover;
		}

		.name {
			width: 100%;
			max-width: 150px;
		}

		.price {
			margin-left: auto;
			white-space: nowrap;
		}

		.close {
			cross();
			position: relative;
			top: -2px;
			margin-left: 12px;
			width: 12px;
			height: 12px;
		}
	}

	&__show-full {
		padding: 30px 15px 15px;

		.btn {
			margin-left: 0;
			padding: 2px 17px 0;
			display: inline-block;
			font-size: 1.4rem;
			font-weight: 400;
			line-height: 36px;
			text-transform: none;
		}
	}
}
