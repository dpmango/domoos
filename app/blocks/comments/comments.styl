.comments {
	padding: 20px 0;

	.wrap {
		padding: 0 30px;

		+below($phones) {
			padding: 0 15px;
		}
	}

	&__title {
		width: 100%;
		h4();
		font-weight: 500;

		+below($phones) {
			margin-bottom: 10px;
		}
	}

	&__block {
		padding: 50px;
		display: flex;
		flex-wrap: wrap;
		width: 100%;
		max-width: 780px;
		border: 1px solid var(--border-color);

		+below($phones) {
			padding: 0;
			border: none;
		}
	}

	&__item {
		margin-top: 35px;
		padding-left: 80px;
		padding-bottom: 35px;
		border-bottom: 1px solid var(--border-color);

		+above($phones) {
			&:last-child {
				padding-bottom: 0;
				border-bottom: none;
			}
		}

		+below($phones) {
			margin-top: 20px;
			padding: 15px 15px 50px;
			border: 1px solid var(--border-color);
		}
	}

	&__head {
		position: relative;

		+below($phones) {
			display: flex;
			align-items: center;
		}
	}

	&__image {
		position: absolute;
		top: 0;
		left: -80px;
		text-align: center;

		img {
			max-width: 60px;
			height: auto;

			+below($phones) {
				max-width: 40px;
			}
		}

		+below($phones) {
			position: relative;
			left: 0;
			margin-right: 20px;
			max-width: 60px;
		}
	}

	&__head-info {
		display: flex;
		flex-direction: column;
	}

	&__name {
		margin-right: 15px;
		font-family: 'Gotham Pro Medium';
		font-size: 12px;
		font-weight: 600;
		color: var(--title-color);
	}

	&__date {
		font-size: 12px;
		color: var(--text-color);
	}

	&__info {
		margin-top: 10px;

		p {
			font-size: 14px;
			line-height: 2;
			color: var(--title-color);

			+below($phones) {
				line-height: 1.8;
			}
		}
	}
}
