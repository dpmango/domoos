.comments {
	padding: 50px 0;

	&__block {
		border: 1px solid var(--border-color);
		padding: 50px 50px;
		display: flex;
		flex-wrap: wrap;
		width: 75%;

	}

	&__title {
		width: 100%;
		h4()
		font-weight: 500;
		margin-bottom: 20px;
	}

	&__list {
		width: 100%;
	}

	&__sidebar {
		width: 25%;
	}
}
