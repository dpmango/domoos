.region {
	&__info {
		position: absolute;
		z-index: 2;
		left: 15px;
		bottom: 15px;
	}

	&__bg {
		position: absolute;
		z-index: 1;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, .3);

		&:before {
			position: absolute;
			top: 0;
			left: 0;
			display: block;
			width: 100%;
			height: 100%;
			content: '';
			background-image: linear-gradient(-180deg, rgba(0, 0, 0, 0) 33%, rgba(0, 0, 0, .38) 85%);
			opacity: .5;
		}
	}

	&__name {
		margin-bottom: 8px;
		font-size: 18px;
		font-weight: 500;
		line-height: 1.2;
		color: #fff;
	}

	&__description {
		margin-bottom: 10px;
		min-height: 38px;
		font-size: 1.2rem;
		line-height: 1.6;

		+below($phones) {
			min-height: 1px;
			line-height: 1.7;
		}
	}

	&__price {
		font-size: 12px;
		font-weight: 400;
		line-height: 1.2;
		color: #fff;
	}

	&__features-title {
		margin-bottom: 10px;
		font-size: 12px;
		font-weight: 500;
		color: var(--text-color);

		+below($phones) {
			margin-bottom: 0;
		}
	}

	&__building-list {
		display: flex;
		flex-direction: column;
	}

	&__building-item {
		margin-top: 10px;
		width: 100%;

		a {
			padding: 4px 10px;
			display: inline-block;
			font-size: 12px;
			line-height: 1.6;
			background: #ECEFF6;
			border-radius: 20px;
		}
	}

	&__show-more {
		padding: 30px 0 25px;
		width: 100%;
		text-align: center;

		+below($phones) {
			padding: 15px 0 10px;
		}

		.icon {
			margin-right: 12px;
			display: inline-block;
			width: 18px;
			height: 18px;
			font-size: 18px;
			transition: .5s;
		}

		.btn {
			display: inline-block;
			width: auto;
			font-size: 13px;
			font-weight: 500;
			line-height: 1;
			text-transform: none;
			color: var(--title-color);

			&:hover {
				.icon {
					transform: rotate(360deg);
				}
			}

			span {
				display: flex;
				align-items: center;
			}
		}
	}
}
