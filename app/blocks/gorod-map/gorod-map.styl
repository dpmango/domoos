.gorod-map {
	margin-top: 90px;

	+below($phones) {
		margin-top: 45px;
		margin-bottom: -10px;
	}

	#city-map {
		padding-bottom: 25px;

		+below($phones) {
			padding-bottom: 65px;
		}
	}

	.wrap {
		padding: 0 30px;

		+below($phones) {
			padding: 0;
		}
	}

	&__container {
		height: auto;
		max-height: 100%;
	}

	.mobileButton {
		display: block;
		order: 5;

		.btn {
			margin: 0;
			padding: 20px;
			width: 100%;
			line-height: 1.2;
		}

		+below($phones) {
			display: none;
		}
	}

	.about-cities__title {
		display: none;

		+below($phones) {
			padding-left: 15px;
			display: block;
		}
	}

	.sidebar__close {
		display: none;
	}

	.map-container {
		max-height: 100%;
	}
}
