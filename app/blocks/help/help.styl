.help {
	&__personal-manager {
		margin-top: auto;

		+above($mobile) {
			margin-right: auto;
			margin-bottom: 15px;
			margin-left: auto;
			width: 110px;
			height: 110px;
		}

		+above($notebooks) {
			margin-right: 60px;
			margin-bottom: auto;
			margin-left: 0;
			width: 175px;
			height: 175px;
		}

		+above($desktop) {
			width: 215px;
			height: 215px;
		}
	}

	&__content {
		display: flex;
		block();

		+above($mobile) {
			padding: 30px 15px;
			flex-wrap: wrap;
		}

		+above($notebooks) {
			margin: 0 15px;
			padding: 40px 40px 35px 50px;
			flex-wrap: nowrap;
		}

		+above($desktop) {
			padding: 40px 40px 35px 60px;
		}
	}

	&__description {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		width: 100%;
		align-content: center;

		+above($notebooks) {
			margin-right: 92px;
			max-width: 350px;
		}

		+above($desktop) {
			margin-right: 35px;
			max-width: 570px;
		}
	}

	&__title {
		width: 100%;
		color: var(--title-color);

		+above($mobile) {
			margin-bottom: 10px;
			font-size: 2.2rem;
			text-align: center;
		}

		+above($notebooks) {
			max-width: 370px;
			font-size: 2.4rem;
			text-align: left;
		}

		+above($desktop) {
			margin-bottom: 0;
			max-width: 470px;
			font-size: 3rem;
		}
	}

	&__form {
		display: flex;
		flex-wrap: wrap;
		align-items: center;
		width: 100%;
		align-content: center;

		+above($mobile) {
			text-align: center;
		}

		+above($notebooks) {
			text-align: left;
		}
	}

	&__text {
		text();

		+above($mobile) {
			margin-bottom: 20px;
		}

		+above($notebooks) {
			margin-bottom: 0;
		}
	}
}
