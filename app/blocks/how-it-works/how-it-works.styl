.how-it-works {
	padding: 85px 0 10px;

	+below($phones) {
		padding: 0 0 10px;
	}

	&__title {
		h2();
		margin-bottom: 17px;
		padding: 0 15px;
	}

	&__content {
		padding: 0 15px;
	}

	.feature {
		margin-bottom: 77px;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;

		+below($phones) {
			margin-bottom: 20px;
		}

		+below($tablet) {
			margin-bottom: 40px;
		}

		&:nth-child(2) {
			flex-direction: row-reverse;

			.feature {
				&__content {
					margin-right: auto;
				}

				&__image {
					// max-width: 540px;

					+below($phones) {
						margin-right: auto;
						max-width: 420px;
					}
				}
			}
		}

		&__image {
			width: 49%;
			// max-width: 445px;
			font-size: 0;

			img {
				width: 100%;
				height: auto;
			}

			+below($tablet) {
				width: 44%;
			}

			+below($phones) {
				margin-bottom: 20px;
				width: 100%;
				max-width: 420px;
			}
		}

		&__content {
			width: 48.5%;
			max-width: 560px;

			+below($tablet) {
				width: 52%;
			}

			+below($phones) {
				width: 100%;
				max-width: 100%;
			}
		}

		&__title {
			h4();
			margin-bottom: 20px;

			+below($phones) {
				margin-bottom: 10px;
			}
		}

		&__text {
			text();
			line-height: 1.9;
		}

		&__list {
			margin-top: 20px;
			margin-left: 35px;
			bulls();

			+below($phones) {
				margin-top: 15px;
				margin-left: 0;
			}

			+below($tablet) {
				margin-left: 0;
			}

			li {
				margin-bottom: 5px;
				display: block;
				width: 100%;

				&:before {
					top: -1px;
				}
			}
		}
	}
}
