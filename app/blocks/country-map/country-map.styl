.country-map {
	position: relative;
	height: 100vh;
	// min-height: 896px;
	// min-height: calc(100vh - 126px);
	max-height: calc(100vh - 126px);

	+below($phones) {
		height: auto;
		min-height: calc(100vh - 60px);
	}

	.CountryMap {
		display: flex;
		align-items: flex-start;
		width: 100%;
		height: 100vh;
		// min-height: 896px;
		// min-height: calc(100vh - 126px);
		max-height: calc(100vh - 126px);
		justify-content: space-between;

		+below($phones) {
			min-height: calc(100vh - 60px);
			max-height: calc(100vh - 60px);
		}
	}

	.to-category {
		position: absolute;
		z-index: 1000;
		top: 30px;
		right: 30px;
		padding: 20px 25px 18px;
		font-size: 1.3rem;
		line-height: 1em;
		block();
		display: none;
		color: var(--text-color);

		span {
			position: relative;

			&:before {
				arrow(2px, 1px, var(--text-color), -135deg);
				top: 1px;
				margin-bottom: 3px;
				margin-left: 13px;
				opacity: .8;

				+below($notebooks) {
					width: 8px;
					height: 8px;
				}

				+below($phones) {
					top: 3px;
					left: -8px;
				}
			}
		}

		+below($phones) {
			top: 20px;
			right: auto;
			left: 15px;
			display: block;
		}
	}

	.to-new-buildings {
		position: absolute;
		z-index: 1000;
		top: 30px;
		right: 30px;
		padding: 20px 25px 18px;
		font-size: 1.3rem;
		line-height: 1em;
		block();
		color: var(--text-color);

		span {
			position: relative;

			&:before {
				arrow(2px, 1px, var(--text-color), 45deg);
				top: 1px;
				margin-bottom: 3px;
				margin-left: 13px;
				opacity: .8;

				+below($notebooks) {
					width: 8px;
					height: 8px;
				}

				+above($phones) {
					top: 3px;
				}
			}
		}

		+below($phones) {
			top: 20px;
			right: auto;
			left: 15px;
			display: none;
		}
	}

	.map-container {
		position: relative;
		margin: 0;
		padding: 0;
		width: 100%;
		height: 100%;
		max-height: calc(100vh - 126px);

		+below($phones) {
			max-height: calc(100vh - 60px);
		}
	}

	.map-form {
		.title {
			margin-bottom: 12px;
			font-size: 20px;
			color: #000;
		}

		.desc {
			font-size: 14px;
			color: #AEB2C2;
		}

		.btn {
			padding: 0 10px;
			display: inline-block;
			// width: 100%;
			width: 38%;
			max-width: 140px;
		}

		input[type='tel'] {
			margin-left: auto;
			width: 60%;
		}

		+below($phones) {
			display: none;
		}
	}

	.mobileButton {
		display: none;
		order: 5;

		.btn {
			line-height: 52px;
		}

		+below($phones) {
			display: block;
		}
	}
}
