.selection {
	padding: 26px 0 28px;
	display: none;
	background: linear-gradient(135deg, rgba(80, 170, 245, 1) 0, rgba(60, 130, 240, 1) 100%);

	+below($phones) {
		display: block;
	}

	p {
		color: #fff;
	}

	&__title {
		font-size: 22px;
	}

	&__text {
		margin-top: 2px;
		font-size: 14px;
	}

	.btn {
		margin-top: 12px;
		margin-left: 0;
		padding: 0 20px;
		display: inline-block;
		max-width: 215px;
		font-size: 1.4rem;
		line-height: 5rem;
		text-transform: uppercase;
		color: #fff;
		background-color: transparent;
		border: 1px solid rgba(255, 255, 255, .45);

		&:hover {
			color: var(--title-color);
			background-color: #eeeeee;
		}
	}

	.wrap {
		padding: 0 30px;

		+below($phones) {
			padding: 0 15px;
		}
	}
}
