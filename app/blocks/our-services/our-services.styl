.our-services {
	margin-top: 80px;
	display: block;

	&.gorod {
		margin-bottom: 60px;
	}

	.wrap {
		+below($notebooks) {
			padding: 0 30px;
		}
	}

	+below($phones) {
		display: none;
	}

	&__title {
		h2();
		margin-bottom: 10px;
		wrap-pad();
	}

	&__content {
		padding: 68px 45px 64px;
		background: #fff;
		border: 1px solid var(--border-color);
		wrap-pad();

		+below($tablet) {
			padding: 30px;
		}
	}

	.tabs {
		display: flex;

		#exchange-tab:checked label[for='content-exchange'] {
			color: var(--blue);
		}

		#exchange-tab:checked~#content-exchange, #selection-tab:checked~#content-selection, #credit-tab:checked~#content-credit, #regions-tab:checked~#content-regions, #programs-tab:checked~#content-programs {
			display: flex;
		}
	}

	.labels {
		position: relative;
		top: -5px;
		display: flex;
		flex-wrap: wrap;
		align-items: flex-start;
		width: 100%;
		max-width: 304px;
		align-content: flex-start;
		bulls();

		+below($tablet) {
			width: 50%;
			max-width: 250px;
		}

		&__item {
			position: relative;
			width: 100%;
			line-height: 5rem;
			cursor: pointer;

			label {
				cursor: pointer;

				+below($tablet) {
					font-size: 1.4rem;
				}
			}

			&.active {
				label {
					color: var(--blue);
				}
			}
		}
	}

	.content {
		padding-top: 2px;
		padding-left: 58px;
		display: flex;
		flex-wrap: wrap;
		width: 100%;
		border-left: 1px solid var(--border-color);

		+below($tablet) {
			padding-left: 30px;
		}

		&__item {
			display: none;
			width: 100%;
		}

		&__radio {
			display: none;
		}

		&__info {
			margin-right: auto;

			+below($tablet) {
				width: 100%;
			}
		}

		&__title {
			h4();
			margin-bottom: 15px;
			max-width: 380px;
		}

		&__text {
			text();
			margin-bottom: 20px;
			max-width: 500px;
			line-height: 2;
		}

		&__image {
			margin-left: 50px;
			width: 29%;
			max-width: 160px;

			+below($tablet) {
				margin-left: 30px;
			}
		}

		&__image-logotype {
			padding: 10px;
			width: 100%;
			height: auto;
			border: 1px solid #DAE0ED;
		}

		&__link {
			margin-bottom: 20px;
		}

		.hotcall {
			&__title--number, &__phone {
				display: none;
			}

			input[type='tel'] {
				width: 100%;
				max-width: 247px;
			}
		}

		.hotcall__content {
			margin-top: 3px;
		}

		.hotcall__submit {
			padding: 0 10px;
			display: inline-block;
			width: 100%;
			max-width: 140px;
		}
	}
}
