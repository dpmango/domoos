.our-services {
	margin-top: 80px;

	+above($mobile) {
		display: none;
	}

	+above($notebooks) {
		display: block;
	}

	&__title {
		h2();
		margin-bottom: 10px;
		wrap-pad();
	}

	&__content {
		padding: 75px 85px;
		border: 1px solid var(--border-color);
		wrap-pad();
	}

	.tabs {
		display: flex;

		#exchange-tab:checked label[for='content-exchange'] {
			color: var(--blue);
		}

		#exchange-tab:checked~#content-exchange, #selection-tab:checked~#content-selection, #credit-tab:checked~#content-credit, #regions-tab:checked~#content-regions, #programs-tab:checked~#content-programs {
			display: block;
		}
	}

	.labels {
		position: relative;
		top: -5px;
		display: flex;
		flex-wrap: wrap;
		align-items: flex-start;
		width: 100%;
		max-width: 350px;
		align-content: flex-start;
		bulls();

		&__item {
			position: relative;
			width: 100%;
			line-height: 5rem;
			cursor: pointer;

			label {
				cursor: pointer;
			}

			&.active {
				label {
					color: var(--blue);
				}
			}
		}
	}

	.content {
		padding-left: 110px;
		display: flex;
		flex-wrap: wrap;
		border-left: 1px solid var(--border-color);

		&__item {
			display: none;
		}

		&__radio {
			display: none;
		}

		&__title {
			h4();
			margin-bottom: 20px;
			max-width: 380px;
		}

		&__text {
			text();
			margin-bottom: 20px;
			max-width: 500px;
		}

		&__link {
			margin-bottom: 20px;
		}

		.hotcall {
			&__title--number, &__phone {
				display: none;
			}

			input[type='tel'] {
				width: 100%;
				max-width: 247px;
			}
		}
	}
}
