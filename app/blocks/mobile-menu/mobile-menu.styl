.mobile-menu {
	position: fixed;
	z-index: 10000;
	top: 0;
	left: -300px;
	display: flex;
	flex-wrap: wrap;
	flex-direction: column;
	align-items: flex-start;
	width: 100%;
	max-width: 300px;
	height: 100%;
	background-color: var(--bg-color);
	opacity: 0;
	box-shadow: 0 2px 20px 0 rgba(240, 240, 240, .7);
	transition: .3s;

	&__header {
		display: flex;
		width: 100%;
		line-height: 75px;
	}

	&__close {
		cross();
		top: 20px;
		right: 20px;
		margin-left: auto;
		width: 20px;
		height: 20px;
	}

	&__content {
		padding: 15px 0;
	}

	&.open {
		left: 0;
		opacity: 1;
	}

	.logo {
		z-index: 100;
		padding: 0 15px;
		display: flex;
		align-items: center;
		font-size: 2rem;
		font-weight: 700;
		color: #fff;
		background-color: var(--blue);
	}

	.nav {
		display: flex;
		flex-wrap: wrap;

		&__item {
			width: 100%;
		}

		&__link {
			padding: 12px 15px;
			font-size: 1.4rem;
			line-height: 1em;
			color: var(--text-color);
		}

		.accordion {
			&__label, &__link {
				padding: 12px 20px 12px 15px;
				font-size: 1.4rem;
				line-height: 1em;
				color: var(--text-color);
			}

			&__label {
				// display: block;
				display: flex;
				width: 100%;

				&:after {
					arrow(3px, 1px, var(--text-color), 135deg);
					margin-top: 4px;
					margin-left: auto;
				}
			}

			input:checked+label:after {
				transform: rotate(315deg);
			}

			&__menu {
				margin-top: -4px;
			}

			&__link {
				width: 100%;

				&:first-child {
					margin-top: 4px;
				}
			}
		}
	}
}
