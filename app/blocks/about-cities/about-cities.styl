.about-cities {
	&.gorod {
		margin-top: 60px;

		+below($phones) {
			margin-top: 20px;
		}

		.about-cities__title, .about-cities__description {
			display: none;

			&.gorod {
				display: inline-block;
				width: auto;
			}
		}
	}

	.wrap {
		position: relative;

		+below(1268px) {
			overflow: hidden;
		}

		+below($tablet) {
			padding-bottom: 0;
		}
	}

	&__header {
		padding: 0 15px;
		display: flex;
		flex-wrap: wrap;
		width: 100%;
	}

	&__title {
		h2();
		margin-bottom: 7px;
		width: 100%;
		font-weight: 500;

		+above($phones) {
			font-size: 2.8rem;
		}

		+below($phones) {
			margin-bottom: 5px;
		}
	}

	&__description {
		text();
		display: block;
		max-width: 630px;

		+below($phones) {
			display: none;
		}
	}

	.to-category-link {
		margin: auto 0 0 auto;
		font-size: 1.6rem;
		white-space: nowrap;

		&:after {
			arrow(2px, 1px, var(--arrow-color), 45deg);
			margin-left: 12px;
		}

		+below($tablet) {
			margin-top: 5px;
			margin-right: 0;
			margin-left: auto;
			font-size: 1.2rem;
		}

		+below($phones) {
			position: absolute;
			left: 15px;
			bottom: 0;
			margin-top: 10px;
			margin-right: auto;
			margin-left: 0;
			width: 100%;
		}
	}

	&__list-static {
		+above($phones) {
			display: flex;
			flex-flow: row wrap;
			justify-content: space-between;
			margin: 0 0 75px;
		}
		&--cell {
			margin: 15px 0;
			padding: 0 15px;

			+above($phones) {
				width: 50%;
				margin: 30px 0 0;
			}
			+above($notebooks) {
				width: 33.333333%;
			}
		}
	}

	.city-static {
		&__container {
			position: relative;
			display: block;
			height: 205px;
			overflow: hidden;

			&:before {
				position: absolute;
				z-index: 1;
				top: 0;
				left: 0;
				display: inline-block;
				width: 100%;
				height: 100%;
				content: '';
				background-image: linear-gradient(180deg, rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, .46) 100%);
			}
			+below($phones) {
				max-width: 350px;
			}
			+above($notebooks) {
				height: 250px;
				&:hover {
					.city-static__img {
						transform: rotate(1deg) scale(1.1);
					}
					.city-static__about {
						transform: translateY(0);
					}
					.city-static__description {
						opacity: 1;

					}
				}
			}
		}

		&__img {
			t();
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			z-index: 0;
			background-position: 50% 50%;
			background-repeat: no-repeat;
			background-size: cover;
		}

		&__about {
			t();
			position: absolute;
			left: 0;
			right: 0;
			bottom: 0;
			z-index: 2;
			padding: 15px 20px;

			+above($notebooks) {
				transform: translateY(6.2rem);
			}

			* {
				color: var(--bg-color);
				font-size: 1.2rem
				line-height: 1.8rem;
			}
		}

		&__name {
			font-size: 1.8rem;
			line-height: 2rem;
		}

		&__price {
			margin-top: .8rem;
		}

		&__description {
			t();
			padding-top: .8rem;
			height: 6.2rem;
			overflow: hidden;
			opacity: 0;

			+below($notebooks) {
				display: none;
			}
		}

		&__show-more {
			position: absolute;
			z-index: 1;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			display: flex;
			justify-content: center;
			align-items: center;

			&--btn {
				t();
				line-height: 57px;
				color: var(--bg-color);
				border: 1px solid var(--bg-color);
				font-size: 1.4rem;
				font-weight: 500;
				padding: 0 40px;
			}
		}
	}

	&__slider {
		position: relative;
		margin: 25px 0 70px;
		padding: 0 15px;

		.slick-slide {
			position: relative;
			left: 0;
			padding: 0;
		}

		+below($tablet) {
			margin-bottom: 40px;
		}

		+below($phones) {
			margin: 20px 0 24px;
			padding: 0 0 0 5px;
		}

		.city {
			position: relative;
			margin: 0 15px;
			overflow: hidden;

			+below($phones) {
				margin: 0 10px;
			}

			&:hover {
				.city__img {
					// background-size: cover;
					transform: rotate(1deg) scale(1.1);
				}
			}

			&:before {
				position: absolute;
				z-index: 1;
				top: 0;
				left: 0;
				display: inline-block;
				width: 100%;
				height: 100%;
				content: '';
				background-image: linear-gradient(180deg, rgba(0, 0, 0, 0) 0, rgba(0, 0, 0, .46) 100%);
			}

			&__img {
				width: 100%;
				min-height: 250px;
				background-repeat: no-repeat;
				background-position: center;
				background-size: cover;
				transition: .4s;

				+below($phones) {
					min-height: 278px;
				}
			}

			&__name {
				position: absolute;
				z-index: 2;
				left: 18px;
				bottom: 20px;
				font-size: 1.8rem;
				font-weight: 500;
				line-height: 1em;
				color: #fff;

				+below($phones) {
					left: 16px;
					bottom: 15px;
					font-size: 1.6rem;
				}
			}

			&__description {
				display: none;
			}
		}
	}

	.slick-slider {
		+below($phones) {
			left: 0;
			overflow: visible;
			width: 77.7%;
		}
	}

	.slick-list {
		+below($phones) {
			overflow: visible;
		}
	}

	.slick-arrow.slick-prev {
		left: -31px;
	}

	.slick-arrow.slick-next {
		right: -31px;
	}
}
